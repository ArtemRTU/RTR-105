#include <stdio.h>

int main()
{
   void welcome();
   void fact();
   int sum(int,int);
   int a,b,c;
    welcome();
    printf("Enter 2 no:\n");
    scanf("%d%d", &a,&b);
    c=sum(a,b);
    printf("sum:%d\n", c);
    fact(a,b);
    return 0;
}

int sum(int a,int b)
    {
int c;
c=a+b;
return c;
    }
void fact(int a,int b)
{
    int i,f=1,f2=1;
for(i=1;i<=a;i++)
      {
        f=f*i;
      }
for(i=1;i<=b;i++)
      {
        f2=f2*i;
      }
      printf("factorial of your numbers is:%d,%d",f,f2);
}
    void welcome(){
printf("Welcome to simple calculator\n");
}
